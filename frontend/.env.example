# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# App Configuration
NEXT_PUBLIC_APP_NAME=VEO7 Video Platform
NEXT_PUBLIC_APP_DESCRIPTION=Professional AI-powered video generation platform

# Features Flags
NEXT_PUBLIC_ENABLE_GOOGLE_AUTH=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_RTL=true

# File Upload Limits
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
NEXT_PUBLIC_ALLOWED_VIDEO_TYPES=video/mp4,video/webm

# Video Processing
NEXT_PUBLIC_MAX_VIDEO_DURATION=300
NEXT_PUBLIC_DEFAULT_VIDEO_QUALITY=720p

# External Services (Optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_GOOGLE_ADSENSE_CLIENT=

# Development
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_LOG_LEVEL=info

# Social Links
